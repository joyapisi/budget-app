<% if user_signed_in? %>
  <nav class="blue-navigation">
     <%= link_to '←', root_path, class: 'nav-buttons first'%>
     <h1>Cloth Transactions</h1>
     <%= button_to 'Logout', destroy_user_session_path, method: :delete, class: 'nav-buttons second' %>
     <% else %>
     <%= button_to 'Login', new_user_session_path, class: 'nav-buttons second display-none' %>
     <% end %>
  </nav>

  <br/>
  <div class="top-total-amount">
    <%= @cloth.amount %>
  </div>

<br/>
<p style="color: green"><%= notice %></p>
<br/>
<%= render @cloth %>

<div class="footer-buttons">
  <%= link_to "Back to clothes", group_clothes_path(:group_id) %> 
  <%= button_to "Delete this cloth", group_cloth_path(group_id: @group.id, id: @cloth.id), method: :delete, data: { confirm: 'Are you sure you want to delete this cloth?' } %>
</div>
