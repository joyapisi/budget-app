<div id="<%= dom_id group %>" class="container">
  <div class="container-left">
    <div class="container-left-first">
      <p>
        <strong>Icon:</strong>
        <%= group.icon %>
      </p>
    </div>
    <div class="container-left-second">
      <p><%= group.name.capitalize %></p>
      <p><%= group.created_at.strftime('%d/%b/%Y') %> </p>
    </div>
  </div>

  <div class="container-right">

    <p>
      <strong>Amount:</strong>
      <%= group.clothes.map { |cloth| cloth.amount }.sum %>
    </p>
  </div>
</div>
